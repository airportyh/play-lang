def main() [
    def initializeUI() [
        body = getDocumentBody()
        button = createElement("button")
        setText(button, "Click")
        appendTo(body, button)
        label = createElement("label")
        appendTo(body, label)
        listenTo(button, "click", def () [
            counter = counter + 1
            display = "Current count: " + counter
            setText(label, display)
        ])
    ]
    
    counter = 1
    initializeUI()
]
